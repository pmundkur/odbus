CLEAN = rm -f *.annot *.cmi *.cmo *.cmxa *.cmx *.o *.a *.opt

BYTE_ENABLED = true

OCAMLFLAGS += -dtypes

DBUS_FILES[] =
	dbus_type
	dbus_value
	dbus_type_parse
	dbus_type_marshal
	dbus_message
	dbus_message_parse
	dbus_message_marshal
	dbus_conv
	dbus_auth
	protocol
	utils

LIB = dbus
DBUS_LIB = $(OCamlLibrary $(LIB), $(DBUS_FILES))

.DEFAULT: $(DBUS_LIB)

.PHONY: clean
clean:
	$(CLEAN) $(DBUS_LIB)
